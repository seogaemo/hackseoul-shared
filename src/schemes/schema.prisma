generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  UNSPECIFIED // 기본값 또는 알 수 없는 역할
  ADMIN // 관리자
  DISTRIBUTOR // 위탁판매자
}

model User {
  uid      String @id @default(uuid())
  name     String
  id       String @unique
  password String
  role     Role
}

model Pipeline {
  uid           String   @id @default(uuid())
  title         String
  description   String
  companyId     String
  productItemId String
  createdAt     DateTime @default(now())

  company     Company  @relation(fields: [companyId], references: [uid])
  productItem ProdItem @relation(fields: [productItemId], references: [uid])
  Product     Product? @relation(fields: [productUid], references: [uid])
  productUid  String?
}

model Product {
  uid       String   @id @default(uuid())
  title     String
  companyId String
  createdAt DateTime @default(now())

  company   Company    @relation(fields: [companyId], references: [uid])
  pipelines Pipeline[]
  ProdItem  ProdItem[]
}

model ProdItem {
  uid         String   @id @default(uuid())
  title       String
  productId   String
  modelNumber String
  createdAt   DateTime @default(now())

  product   Product    @relation(fields: [productId], references: [uid])
  pipelines Pipeline[]
}

model Company {
  uid            String   @id @default(uuid())
  name           String
  owner          String
  ownerPhoto     String
  phone          String
  email          String
  address        String
  licenseNumber  String
  businessNumber String
  type           Int // 1(판매자) | 0(유통업자)
  createdAt      DateTime @default(now())

  pipelines Pipeline[]
  products  Product[]
}
